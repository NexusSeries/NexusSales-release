<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Black Blur Theme Colors -->
    <Color x:Key="BackgroundColor">#CC15132B</Color>
    <Color x:Key="LoginBackgroundColor">#CC15132B</Color>
    <Color x:Key="InputBackgroundColor">#B30C081F</Color>
    <Color x:Key="AccentColor">#FF7166F9</Color>
    <Color x:Key="BorderColor">#32235f</Color>
    <Color x:Key="AcrylicBackgroundColor">#E615132B</Color>

    <!-- Font Colors -->
    <Color x:Key="FontNormal">#FFF5F5F5</Color>
    <Color x:Key="FontAlert">#FFFFBA00</Color>
    <Color x:Key="FontWarning">#FF861B2D</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AcrylicBackgroundBrush" Color="{StaticResource AcrylicBackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource LoginBackgroundColor}" />
    <SolidColorBrush x:Key="LoginBackgroundBrush" Color="{StaticResource LoginBackgroundColor}" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <!-- Font Brushes -->
    <SolidColorBrush x:Key="FontNormalBrush" Color="{StaticResource FontNormal}" />
    <SolidColorBrush x:Key="FontAlertBrush" Color="{StaticResource FontAlert}" />
    <SolidColorBrush x:Key="FontWarningBrush" Color="{StaticResource FontWarning}" />

    <!-- Drop Shadow Effect -->
    <DropShadowEffect x:Key="DropShadowEffect" Color="#000000" Direction="270" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>

    <!-- Zoom Animation and WindowButtons style: copy from DarkMode.xaml as needed -->


    <!--Zoom Animation-->
    <Style x:Key="ZoomAnimation" TargetType="Button">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                     To="1.4" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                     To="1.4" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                     To="1" Duration="0:0:0.15"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                     To="1" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--#region Styles-->
    <Style x:Key="WindowButtons" TargetType="Button" BasedOn="{StaticResource ZoomAnimation}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>