<Window x:Class="NexusSales.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:NexusSales.UI.Converters"
        xmlns:uc="clr-namespace:NexusSales.UI.UserControls"
        Title="Login"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        BorderBrush="Transparent"
        x:Name="loginpage"
        AllowsTransparency="True"
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={StaticResource WidthPercentConverter}, ConverterParameter=0.25}"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={StaticResource HeightPercentConverter}, ConverterParameter=0.7}">
    <Window.Resources>
        <conv:WidthPercentConverter x:Key="WidthPercentConverter"/>
        <conv:HeightPercentConverter x:Key="HeightPercentConverter"/>
    </Window.Resources>
    <Border CornerRadius="25" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Background="#9918132a">
        <Grid Margin="8">
            <Border x:Name="MainBorder" CornerRadius="25" Background="{DynamicResource BackgroundLiteBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- 1. Custom Title Bar -->
                    <Grid Grid.Row="0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,10,0,0">
                            <Button Style="{StaticResource WindowButtons}" Click="Close_Click" ToolTip="Close">
                                <Ellipse Width="8" Height="8" Fill="#eb1700" Cursor="Hand"/>
                            </Button>
                            <Button Style="{StaticResource WindowButtons}" Click="Minimize_Click" ToolTip="Hide" Margin="5,0,0,0">
                                <Ellipse Width="8" Height="8" Fill="#009d00" Cursor="Hand"/>
                            </Button>
                        </StackPanel>
                        <Border Grid.Column="1"
                                Margin="20 0 0 0"
                                Background="Transparent"
                                Cursor="SizeAll"
                                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>
                    </Grid>
                    <!-- 2. Main Frame for navigation -->
                    <Frame x:Name="MainFrame"
                           Grid.Row="1"
                           NavigationUIVisibility="Hidden"
                           Background="Transparent" Navigated="MainFrame_Navigated"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>