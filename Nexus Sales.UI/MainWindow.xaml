<Window x:Class="NexusSales.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexusSales.UI"
        xmlns:buttons="clr-namespace:NexusSales.FrontEnd.Buttons;assembly=NexusSales.FrontEnd"
        xmlns:controls="clr-namespace:NexusSales.FrontEnd.Controls;assembly=NexusSales.FrontEnd"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:userControls="clr-namespace:NexusSales.UI.UserControls"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="800" Width="1280">
    
    <!-- Add the scrollbar style to Window.Resources -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Remove the x:Key to make this an implicit style -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="2"/> <!-- Reduced from 4px to 2px -->
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Grid Background="Transparent">
                                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb>
                                                <Thumb.Template>
                                                    <ControlTemplate>
                                                        <!-- Smoother edges with larger radius relative to width -->
                                                        <Border Background="{StaticResource AccentBrush}" 
                                                                CornerRadius="5"
                                                                Width="10"
                                                                Opacity="0.8"/> <!-- Slight transparency -->
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="25" BorderBrush="{StaticResource BackgroundLiteBrush}" BorderThickness="1" Background="#9918132a">
        <Grid Margin="8">
            <Border CornerRadius="25" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource BackgroundLiteBrush}" BorderThickness="1">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <!--Left Menu-->
                        <ColumnDefinition Width="100"/>
                        <!--Right Menu-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--#region Left Menu-->
                    <Border CornerRadius="25 0 0 25" Grid.Column="0" Background="{StaticResource FrontgroundLiteBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!--Mac os Buttons-->
                                <RowDefinition Height="auto"/>
                                <!--Pages Buttons-->
                                <RowDefinition Height="*"/>
                                <!--Shut Down-->
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <!--#region Mac os Buttons-->
                            <Border Grid.Row="0" CornerRadius="20 0 0 25">
                                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 40">
                                    <buttons:MacButton ButtonColor="#eb1700" Height="8" Width="8" ToolTip="Close" Command="{Binding CloseCommand}"/>
                                    <buttons:MacButton ButtonColor="#ffaf01" Margin="10,0" Height="8" Width="8" ToolTip="{Binding WindowStateText}" Command="{Binding MinMaxCommand}"/>
                                    <buttons:MacButton ButtonColor="#009d00" Height="8" Width="8" ToolTip="Hide" Command="{Binding HideCommand}"/>
                                </StackPanel>
                            </Border>
                            <!--#endregion-->

                            <!--#region Pages Buttons-->
                            <ScrollViewer x:Name="NavScrollViewer" 
                                          Grid.Row="1" 
                                          VerticalScrollBarVisibility="Visible" 
                                          HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Margin="15,18,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                                    <buttons:PanelButton Margin="0,10,0,0" GlowColor="{StaticResource AccentBrush}"  CommandParameter="Home" ToolTipText="Home">
                                        <buttons:PanelButton.Icon>
                                            <buttons:PanelButtonIcon Tag="Home" Glow="True" Animate="True" IconColor="{StaticResource FontNormal}" HoverColor="{StaticResource AccentElectricColor}" Color="{StaticResource FontNormalBrush}" ActiveColor="{StaticResource AccentElectricBrush}" Cursor="Hand" Click="Home"/>
                                        </buttons:PanelButton.Icon>
                                    </buttons:PanelButton>

                                    <buttons:PanelButton Margin="0,10,0,0" GlowColor="{StaticResource AccentBrush}"  CommandParameter="Settings" ToolTipText="Settings">
                                        <buttons:PanelButton.Icon>
                                            <buttons:PanelButtonIcon Tag="Cogoutline" Glow="True" Animate="True" IconColor="{StaticResource FontNormal}"  HoverColor="{StaticResource AccentElectricColor}"  Color="{StaticResource FontNormalBrush}" ActiveColor="{StaticResource AccentElectricBrush}" Cursor="Hand" Click="Settings"/>
                                        </buttons:PanelButton.Icon>
                                    </buttons:PanelButton>
                                    
                                    <buttons:PanelButton Margin="0,10,0,0" GlowColor="{StaticResource AccentBrush}"  CommandParameter="Facebook" Command="{Binding NavigateCommand}" ToolTipText="Settings">
                                        <buttons:PanelButton.Icon>
                                            <buttons:PanelButtonIcon Tag="Facebook" Glow="True" Animate="True" IconColor="{StaticResource FontNormal}"  HoverColor="{StaticResource AccentElectricColor}"  Color="{StaticResource FontNormalBrush}" ActiveColor="Blue" Cursor="Hand"/>
                                        </buttons:PanelButton.Icon>
                                    </buttons:PanelButton>
                                    
                                </StackPanel>
                            </ScrollViewer>
                            <!--#endregion-->

                            <!--#region Shutdown Button-->
                            <Border Grid.Row="2" VerticalAlignment="Bottom" Margin="0,0,0,20">
                                <buttons:PanelButton Margin="0,10,0,0" GlowColor="{StaticResource FontWarningBrush}"  CommandParameter="Shut Down" ToolTipText="Shut Down" GlowEnabled="True" AnimateEnabled="False">
                                    <buttons:PanelButton.Icon>
                                        <buttons:PanelButtonIcon Tag="Power" IconColor="{StaticResource FontNormal}"  HoverColor="{StaticResource FontWarning}" Color="{StaticResource FontNormalBrush}" ActiveColor="{StaticResource FontWarningBrush}" Cursor="Hand" Click="Shut Down"/>
                                    </buttons:PanelButton.Icon>
                                </buttons:PanelButton>



                            </Border>
                            <!--#endregion-->

                        </Grid>
                    </Border>
                    <!--#endregion-->


                    <!--#region Right Menu-->
                    <Border Grid.Column="1" Background="{StaticResource FrontgroundLiteBrush}" MouseDown="Move_Window" CornerRadius="0 25 25 0">
                        <Grid>
                            <!--#region Grid-->
                            <Grid.RowDefinitions>
                                <!--Header Row-->
                                <RowDefinition Height="auto"/>
                                <!--Body Row-->
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--#endregion-->

                            <!--#region Header-->
                            <Grid Grid.Row="0" Margin="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <!--#region Search TextBox-->
                                <Grid>
                                    <!-- Placeholder text that disappears when typing or focused -->
                                    <TextBlock x:Name="searchPlaceholder" 
                                               Margin="40 0 15 0" 
                                               VerticalAlignment="Center" 
                                               Foreground="{StaticResource FontNormalBrush}" 
                                               Panel.ZIndex="1" 
                                               IsHitTestVisible="False" 
                                               FontFamily="{StaticResource RobotoFontFamily}"
                                               Text="Search here ...">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=searchTextBox, Path=Text}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=searchTextBox, Path=IsFocused}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=searchTextBox, Path=Text}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=searchTextBox, Path=Text.Length}" Value="0" />
                                                            <Condition Binding="{Binding ElementName=searchTextBox, Path=IsFocused}" Value="False" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Main search TextBox with event handlers -->
                                    <TextBox x:Name="searchTextBox" 
                                             Style="{StaticResource SearchTextBox}" 
                                             Background="{StaticResource BackgroundLiteBrush}"
                                             KeyDown="SearchTextBox_KeyDown"
                                             TextChanged="SearchTextBox_TextChanged"
                                             GotFocus="SearchTextBox_GotFocus"
                                             FontFamily="{StaticResource RobotoFontFamily}">
                                        <TextBox.Triggers>
                                            <EventTrigger RoutedEvent="TextBox.TextChanged">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="searchIcon"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0.6" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="searchIcon"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="1" Duration="0:0:0.2"
                                                                         BeginTime="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBox.Triggers>
                                    </TextBox>

                                    <!-- Search icon with visual feedback -->
                                    <Icon:PackIconMaterial x:Name="searchIcon" 
                                                           Kind="Magnify" 
                                                           Width="15" Height="15" 
                                                           VerticalAlignment="Center" 
                                                           Foreground="{StaticResource FontNormalBrush}" 
                                                           Margin="15 0 0 0" 
                                                           HorizontalAlignment="Left" />

                                    <!-- Search suggestions popup -->
                                    <Popup x:Name="suggestionsPopup" 
                                           PlacementTarget="{Binding ElementName=searchTextBox}" 
                                           Placement="Bottom" 
                                           Width="{Binding ElementName=searchTextBox, Path=ActualWidth}"
                                           IsOpen="False" 
                                           StaysOpen="False">
                                        <Border Background="{StaticResource BackgroundBrush}" 
                                                BorderBrush="{StaticResource BackgroundLiteBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="8">
                                            <ListBox x:Name="suggestionsList" 
                                                     MaxHeight="200" 
                                                     Background="Transparent" 
                                                     BorderThickness="0"
                                                     SelectionChanged="SuggestionsList_SelectionChanged">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" 
                                                                   Foreground="{StaticResource FontNormalBrush}" 
                                                                   Padding="8,4"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="5"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border x:Name="Border" 
                                                                            Background="{TemplateBinding Background}" 
                                                                            CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{StaticResource BackgroundLiteBrush}"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsSelected" Value="True">
                                                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </Border>
                                    </Popup>

                                    <!-- Loading indicator -->
                                    <ProgressBar x:Name="searchProgress" 
                                                 Height="2" 
                                                 VerticalAlignment="Bottom" 
                                                 IsIndeterminate="True" 
                                                 Visibility="Collapsed"
                                                 Foreground="{StaticResource AccentBrush}"/>
                                </Grid>
                                <!--#endregion-->


                                <!--Buttons-->
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="20 0 0 0">

                                    <!--GPT Button with Rainbow Color Animation-->
                                    <Button Style="{StaticResource HeaderButtons}" ToolTip="GPT" x:Name="gptButton">
                                        <Grid>
                                            <Ellipse x:Name="glowEllipse" 
                                                     Width="45" Height="45" 
                                                     Opacity="0">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush x:Name="rainbowGradient" StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#FF0000" Offset="0" x:Name="color1"/>
                                                        <GradientStop Color="#FF9900" Offset="0.2" x:Name="color2"/>
                                                        <GradientStop Color="#FFFF00" Offset="0.4" x:Name="color3"/>
                                                        <GradientStop Color="#00FF00" Offset="0.6" x:Name="color4"/>
                                                        <GradientStop Color="#0066FF" Offset="0.8" x:Name="color5"/>
                                                        <GradientStop Color="#9900FF" Offset="1" x:Name="color6"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                                <Ellipse.Effect>
                                                    <BlurEffect Radius="20" />
                                                </Ellipse.Effect>
                                                <Ellipse.RenderTransform>
                                                    <RotateTransform x:Name="gradientRotate" Angle="0" CenterX="22.5" CenterY="22.5" />
                                                </Ellipse.RenderTransform>
                                            </Ellipse>

                                            <Viewbox Width="25" Height="25" Stretch="Uniform" RenderOptions.EdgeMode="Aliased">
                                                <Path x:Name="gptPath" 
                                                      Fill="{StaticResource FontNormalBrush}" 
                                                      RenderTransformOrigin="0.5,0.5"
                                                      Data="M626.9464,278.4037a169.4492,169.4492,0,0,0-14.5642-139.187A171.3828,171.3828,0,0,0,427.7883,56.9841,169.45,169.45,0,0,0,299.9746.0034,171.3985,171.3985,0,0,0,136.4751,118.6719,169.5077,169.5077,0,0,0,23.1574,200.8775,171.41,171.41,0,0,0,44.2385,401.845,169.4564,169.4564,0,0,0,58.8021,541.0325a171.4,171.4,0,0,0,184.5945,82.2318A169.4474,169.4474,0,0,0,371.21,680.2454,171.4,171.4,0,0,0,534.7642,561.51a169.504,169.504,0,0,0,113.3175-82.2063,171.4116,171.4116,0,0,0-21.1353-200.9ZM371.2647,635.7758a127.1077,127.1077,0,0,1-81.6027-29.5024c1.0323-.5629,2.8435-1.556,4.0237-2.2788L429.13,525.7575a22.0226,22.0226,0,0,0,11.1306-19.27V315.5368l57.25,33.0567a2.0332,2.0332,0,0,1,1.1122,1.568V508.2972A127.64,127.64,0,0,1,371.2647,635.7758ZM97.3705,518.7985a127.0536,127.0536,0,0,1-15.2074-85.4256c1.0057.6037,2.7624,1.6768,4.0231,2.4012L221.63,514.01a22.04,22.04,0,0,0,22.2492,0L409.243,418.5281v66.1134a2.0529,2.0529,0,0,1-.818,1.7568l-136.92,79.0534a127.6145,127.6145,0,0,1-174.134-46.6532ZM61.7391,223.1114a127.0146,127.0146,0,0,1,66.3545-55.8944c0,1.1667-.067,3.2329-.067,4.6665V328.3561a22.0038,22.0038,0,0,0,11.1173,19.2578l165.3629,95.4695-57.2481,33.055a2.0549,2.0549,0,0,1-1.9319.1752l-136.933-79.1215A127.6139,127.6139,0,0,1,61.7391,223.1114ZM532.0959,332.5668,366.7308,237.0854l57.25-33.0431a2.0455,2.0455,0,0,1,1.93-.1735l136.934,79.0535a127.5047,127.5047,0,0,1-19.7,230.055V351.8247a21.9961,21.9961,0,0,0-11.0489-19.2579Zm56.9793-85.7589c-1.0051-.6174-2.7618-1.6769-4.0219-2.4L449.6072,166.1712a22.07,22.07,0,0,0-22.2475,0L261.9963,261.6543V195.5409a2.0529,2.0529,0,0,1,.818-1.7567l136.9205-78.988a127.4923,127.4923,0,0,1,189.34,132.0117ZM230.8716,364.6456,173.6082,331.589a2.0321,2.0321,0,0,1-1.1122-1.57V171.8835A127.4926,127.4926,0,0,1,381.5636,73.9884c-1.0322.5633-2.83,1.5558-4.0236,2.28L242.0957,154.5044a22.0025,22.0025,0,0,0-11.1306,19.2566Zm31.0975-67.0521L335.62,255.0559l73.6488,42.51v85.0481L335.62,425.1266l-73.6506-42.5122Z">
                                                    <Path.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform x:Name="gptScale" ScaleX="1" ScaleY="1"/>
                                                            <RotateTransform x:Name="gptRotate" Angle="0"/>
                                                        </TransformGroup>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Viewbox>
                                        </Grid>

                                        <Button.Triggers>
                                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <!-- Glow opacity animation -->
                                                        <DoubleAnimation Storyboard.TargetName="glowEllipse"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0.85" Duration="0:0:0.3" />

                                                        <!-- Rotating rainbow gradient animation -->
                                                        <DoubleAnimation Storyboard.TargetName="gradientRotate"
                                                                        Storyboard.TargetProperty="Angle"
                                                                        From="0" To="360" Duration="0:0:3"
                                                                        RepeatBehavior="Forever" />

                                                        <!-- Shifting rainbow colors -->
                                                        <ColorAnimation Storyboard.TargetName="color1" 
                                                                        Storyboard.TargetProperty="Color"
                                                                        From="#FF0000" To="#9900FF" 
                                                                        Duration="0:0:2" AutoReverse="True"
                                                                        RepeatBehavior="Forever" />

                                                        <ColorAnimation Storyboard.TargetName="color2" 
                                                                        Storyboard.TargetProperty="Color"
                                                                        From="#FF9900" To="#FF0000" 
                                                                        Duration="0:0:2" AutoReverse="True"
                                                                        RepeatBehavior="Forever" />

                                                        <ColorAnimation Storyboard.TargetName="color3" 
                                                                        Storyboard.TargetProperty="Color"
                                                                        From="#FFFF00" To="#FF9900" 
                                                                        Duration="0:0:2" AutoReverse="True"
                                                                        RepeatBehavior="Forever" />

                                                        <ColorAnimation Storyboard.TargetName="color4" 
                                                                        Storyboard.TargetProperty="Color"
                                                                        From="#00FF00" To="#FFFF00" 
                                                                        Duration="0:0:2" AutoReverse="True"
                                                                        RepeatBehavior="Forever" />

                                                        <ColorAnimation Storyboard.TargetName="color5" 
                                                                        Storyboard.TargetProperty="Color"
                                                                        From="#0066FF" To="#00FF00" 
                                                                        Duration="0:0:2" AutoReverse="True"
                                                                        RepeatBehavior="Forever" />

                                                        <ColorAnimation Storyboard.TargetName="color6" 
                                                                        Storyboard.TargetProperty="Color"
                                                                        From="#9900FF" To="#0066FF" 
                                                                        Duration="0:0:2" AutoReverse="True"
                                                                        RepeatBehavior="Forever" />

                                                        <!-- Scale animation -->
                                                        <DoubleAnimation Storyboard.TargetName="gptScale"
                                                                         Storyboard.TargetProperty="ScaleX"
                                                                         To="1.07" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <ElasticEase Oscillations="1" Springiness="5" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetName="gptScale"
                                                                         Storyboard.TargetProperty="ScaleY"
                                                                         To="1.07" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <ElasticEase Oscillations="1" Springiness="5" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>

                                                        <!-- Subtle rotation animation -->
                                                        <DoubleAnimation Storyboard.TargetName="gptRotate"
                                                                         Storyboard.TargetProperty="Angle"
                                                                         To="10" Duration="0:0:0.4">
                                                            <DoubleAnimation.EasingFunction>
                                                                <BackEase Amplitude="0.3" EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>

                                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <!-- Reverse glow animation -->
                                                        <DoubleAnimation Storyboard.TargetName="glowEllipse"
                                                                         Storyboard.TargetProperty="Opacity"
                                                                         To="0" Duration="0:0:0.5" />

                                                        <!-- Stop rotation -->
                                                        <DoubleAnimation Storyboard.TargetName="gradientRotate"
                                                                        Storyboard.TargetProperty="Angle"
                                                                        To="0" Duration="0:0:0.3" />

                                                        <!-- Reverse scale animation -->
                                                        <DoubleAnimation Storyboard.TargetName="gptScale"
                                                                         Storyboard.TargetProperty="ScaleX"
                                                                         To="1" Duration="0:0:0.3" />
                                                        <DoubleAnimation Storyboard.TargetName="gptScale"
                                                                         Storyboard.TargetProperty="ScaleY"
                                                                         To="1" Duration="0:0:0.3" />

                                                        <!-- Reverse rotation animation -->
                                                        <DoubleAnimation Storyboard.TargetName="gptRotate"
                                                                         Storyboard.TargetProperty="Angle"
                                                                         To="0" Duration="0:0:0.3" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Button.Triggers>
                                    </Button>

                                    <!--Notifications-->
                                    <userControls:NotificationBadge x:Name="NotificationBadgeControl" />

                                    <!--Bookmark-->
                                    <Button x:Name="BookmarksButton"
                                            Style="{StaticResource HeaderButtons}"
                                            ToolTip="Bookmarks"
                                            Click="BookmarksButton_Click">
                                        <Icon:PackIconMaterial Kind="Bookmark" HorizontalAlignment="Center" Width="18" Height="18" Foreground="{StaticResource FontNormalBrush}"/>
                                    </Button>

                                    <!--Profile-->
                                    <Border Background="{StaticResource BackgroundLiteBrush}" CornerRadius="35" Height="48">
                                        <Button Style="{StaticResource HeaderButtons}" ToolTip="Profile">
                                            <Icon:PackIconMaterial Kind="Account" Width="15" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Button>
                                    </Border>

                                    <!--Bookmarks Popup-->
                                    <Popup x:Name="BookmarksPopup"
                                           PlacementTarget="{Binding ElementName=BookmarksButton}"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           AllowsTransparency="True"
                                           PopupAnimation="Fade">
                                        <userControls:BookmarksPanel x:Name="BookmarksPanelControl" CloseRequested="BookmarksPanel_CloseRequested"/>
                                    </Popup>

                                </StackPanel>
                            </Grid>
                            <!--#endregion-->

                            <!--#region Body-->
                            <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}" CornerRadius="0 0 25 0">

                                <Frame Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>

                            </Border>
                            <!--#endregion-->

                        </Grid>
                    </Border>

                    <!--#endregion-->
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

