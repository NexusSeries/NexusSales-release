<Page x:Class="NexusSales.UI.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:uc="clr-namespace:NexusSales.UI.UserControls"
      xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:NexusSales.UI.Pages"
      Background="Transparent">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <!-- Improved TextBox Style -->
        <Style TargetType="TextBox" x:Key="NoFocusBorderTextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{StaticResource FontNormalBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.10"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF64B5F6"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Improved PasswordBox Style -->
        <Style TargetType="PasswordBox" x:Key="NoFocusBorderPasswordBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{StaticResource FontNormalBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.10"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF64B5F6"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Improved Button Style for Send Code -->
        <Style TargetType="Button" x:Key="SendCodeButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="18"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.18"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SendCodeButtonGradientHover}"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.04" ScaleY="1.04"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1565C0"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFB0BEC5"/>
                                <Setter Property="Foreground" Value="#FFEEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Gradient Brushes for Button -->
        <LinearGradientBrush x:Key="SendCodeButtonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF2196F3" Offset="0"/>
            <GradientStop Color="#FF1976D2" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SendCodeButtonGradientHover" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF64B5F6" Offset="0"/>
            <GradientStop Color="#FF1976D2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Enhanced ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="{StaticResource FontDarkBrush}" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource FontNormalBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="20"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.10"/>
                                </Border.Effect>
                                <DockPanel>
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Margin="0,0,24,0"
                                                      RecognizesAccessKey="True"/>
                                    <Path x:Name="Arrow"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Width="12" Height="8"
                                          Fill="#FF1976D2"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Stretch="Uniform"
                                          RenderTransformOrigin="0.5,0.5"
                                          DockPanel.Dock="Right"/>
                                </DockPanel>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource FontNormalBrush}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer Margin="4,2,4,2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF64B5F6"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FFB0BEC5"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFB0BEC5"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#FFB0BEC5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Create Account" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,16,0,16"/>
        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="32,0,32,0" VerticalAlignment="Center">
            <!-- Email -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <TextBox x:Name="EmailBox"
                             Foreground="{StaticResource FontDarkBrush}"
                             Style="{StaticResource NoFocusBorderTextBox}"
                             Background="Transparent"
                             Margin="0"
                             />
                    <TextBlock Text="Email"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=EmailBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="Email" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <uc:FirstButton
                    Text="Send Code"
                    Height="40"
                    Width="140"
                    GlowEffect="True"
                    GlowColor="AliceBlue"
                    ZoomEffect="True"
                    ButtonColor="White"
                    Radius="18"
                    BorderBrush="Transparent"
                    BorderThickness="0.2"
                    Click="SendCodeButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Verification Code -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <TextBox x:Name="CodeBox"
                             Foreground="{StaticResource FontDarkBrush}"
                             Style="{StaticResource NoFocusBorderTextBox}"
                             Background="Transparent"
                             Margin="0"
                             />
                    <TextBlock Text="Verification Code"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=CodeBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="ShieldCheck" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
            <TextBlock x:Name="CodeStatusText" Foreground="Orange" Visibility="Collapsed" Margin="0,0,0,5"/>
            <!-- First Name -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <TextBox x:Name="FirstNameBox"
                             Foreground="{StaticResource FontDarkBrush}"
                             Style="{StaticResource NoFocusBorderTextBox}"
                             Background="Transparent"
                             Margin="0"
                             />
                    <TextBlock Text="First Name"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=FirstNameBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="Account" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
            <!-- Last Name -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <TextBox x:Name="LastNameBox"
                             Foreground="{StaticResource FontDarkBrush}"
                             Style="{StaticResource NoFocusBorderTextBox}"
                             Background="Transparent"
                             Margin="0"
                             />
                    <TextBlock Text="Last Name"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=LastNameBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="Account" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
            <!-- Password -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <PasswordBox x:Name="PasswordBox"
                                 Foreground="{StaticResource FontDarkBrush}"
                                 Style="{StaticResource NoFocusBorderPasswordBox}"
                                 Background="Transparent"
                                 Margin="0"
                                 />
                    <TextBlock Text="Password"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Password.IsEmpty, ElementName=PasswordBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="Lock" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
            <!-- Confirm Password -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Foreground="{StaticResource FontDarkBrush}"
                                 Style="{StaticResource NoFocusBorderPasswordBox}"
                                 Background="Transparent"
                                 Margin="0"
                                 />
                    <TextBlock Text="Confirm Password"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Password.IsEmpty, ElementName=ConfirmPasswordBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="LockCheck" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
            <!-- Account Type -->
            <Border CornerRadius="20" Background="{StaticResource BackgroundBrush}" BorderBrush="{StaticResource FontNormalBrush}" BorderThickness="1" Margin="0,0,0,10">
                <Grid>
                    <ComboBox x:Name="AccountTypeComboBox"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Foreground="{StaticResource FontDarkBrush}"
                              Background="Transparent"
                              BorderThickness="0"
                              Margin="0"
                              FontWeight="Bold"
                              FontSize="14"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center"/>
                    <TextBlock Text="Account Type"
                               Foreground="{StaticResource FontDarkBrush}"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding SelectedItem, ElementName=AccountTypeComboBox, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <Icons:PackIconMaterial Kind="AccountGroup" FontSize="18" Foreground="{StaticResource FontNormalBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                </Grid>
            </Border>
        </StackPanel>
        <!-- Register Button and Status -->
        <StackPanel Grid.Row="2" Margin="32,16,32,0" VerticalAlignment="Bottom">
            <uc:FirstButton Text="Register" Height="40" Width="220" GlowEffect="True" GlowColor="AliceBlue" ZoomEffect="True" ButtonColor="White" Radius="20" BorderBrush="Transparent" BorderThickness="0.2" Click="RegisterButton_Click" HorizontalAlignment="Center"/>
            <TextBlock x:Name="StatusText"
                       HorizontalAlignment="Center"
                       Foreground="LightBlue"
                       FontWeight="Bold"
                       Visibility="Collapsed"
                       Margin="0,8,0,0"/>
            <TextBlock HorizontalAlignment="Center" Foreground="White" Margin="0,8,0,0">
                Already have an account?
                <Run Text=" " />
                <Run Text="Login" FontWeight="Bold" Foreground="LightBlue"
                     TextDecorations="Underline"
                     Cursor="Hand"
                     MouseLeftButtonUp="LoginText_MouseLeftButtonUp"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>