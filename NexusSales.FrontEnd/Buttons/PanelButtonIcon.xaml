<UserControl x:Class="NexusSales.FrontEnd.Buttons.PanelButtonIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NexusSales.FrontEnd.Buttons"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <UserControl.Resources>
        <SolidColorBrush x:Key="AnimatedForeground" Color="{Binding IconColor, ElementName=root}" />
    </UserControl.Resources>
    <Grid>
        <Icon:PackIconMaterial Kind="{Binding Tag, ElementName=root}"
                               Width="18" Height="18"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource AnimatedForeground}"
                               Cursor="{Binding Cursor, ElementName=root}"/>
    </Grid>
</UserControl>
